<Window x:Class="project_to_school_inf.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:project_to_school_inf"
        mc:Ignorable="d"
        Title="Управление пользователями" Height="450" Width="800">
    <Grid>
        <!-- Таблица пользователей -->
        <DataGrid x:Name="UsersDataGrid" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  Margin="300,41,10,101" 
                  SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="100"/>
                <DataGridTextColumn Header="Пароль" Binding="{Binding Password}" Width="100"/>
                <DataGridTextColumn Header="Дата регистрации" 
                                  Binding="{Binding RegistrationDate, StringFormat=dd.MM.yyyy}" 
                                  Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Content="Пользователи" HorizontalAlignment="Left" Margin="515,2,0,0" VerticalAlignment="Top" Width="188" FontSize="22"/>
        <Button Content="Удалить пользователя" HorizontalAlignment="Left" Margin="508,339,0,0" VerticalAlignment="Top" Height="61" Width="202" FontSize="18" Click="Button_Click"/>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="36,78,0,0" VerticalAlignment="Top" Width="188" FontSize="16"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="36,131,0,0" VerticalAlignment="Top" Width="188" FontSize="16"/>
        <Label Content="Список пользователей" HorizontalAlignment="Left" Margin="36,23,0,0" VerticalAlignment="Top" Width="222" FontSize="20"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="22,356,0,0" VerticalAlignment="Top" Height="31" Width="87" Click="Button_Click_1"/>
    </Grid>
</Window>